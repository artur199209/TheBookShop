@model IEnumerable<IdentityRole>

<div class="text-center">
    <h4>Wszystkie role</h4>    
</div>

<table class="table table-bordered table-hover table-sm" role="grid">
    <tr>
        <th>Id</th>
        <th>Nazwa roli</th>
        <th>Użytkownicy</th>
        <th></th>
    </tr>
    
    @if (!Model.Any())
    {
        <tr><td colspan="4" class="text-center">Brak ról</td></tr>
    }
    else
    {
        foreach (IdentityRole role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td identity-role="@role.Id"></td>
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-id="@role.Id">
                            Edytuj
                        </a>
                        <button type="submit" class="btn btn-danger btn-sm">
                            Usuń
                        </button>
                    </form>
                </td>
            </tr>
        }
    }
</table>

<div class="text-center">
    <a asp-area="Admin" asp-controller="Role" asp-action="Create" class="btn btn-primary">Dodaj rolę</a>
</div>