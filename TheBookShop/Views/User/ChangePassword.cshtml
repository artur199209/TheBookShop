@model AppUser

<h4>Zmiana hasła</h4>

<form asp-action="ChangePassword" asp-route-id="@Model.Id" asp-antiforgery="true" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" class="form-control" disabled />
    </div>
    <div class="form-group">
        <input asp-for="Email" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label for="password">Hasło</label>
        <input name="password" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Zapisz</button>
    <a asp-action="List" asp-controller="Product" asp-area="" class="btn btn-secondary">Anuluj</a>
</form>