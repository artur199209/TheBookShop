@model IEnumerable<Order>
@{
    ViewBag.Title = "Orders";
    Layout = "_AdminLayout";
}

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <tr><th>Name</th><th>Zip</th><th colspan="2">Details</th></tr>

        @foreach (Order order in Model)
        {
            <tr>
                <td>@order.Name</td>
                <th>Product</th>
                <th>Quantity</th>
                <td>
                    <form action="MarkShipped" method="post">
                        <input type="hidden" name="orderId" value="@order.OrderID">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Ship
                        </button>
                    </form>
                </td>
            </tr>
            foreach (CartLine cartLine in order.Lines)
             {
                 <tr>
                     <td colspan="2"></td>
                     <td>@cartLine.Product.Title</td>
                     <td>@cartLine.Quantity</td>
                     <td></td>
                 </tr>
             }
        }

    </table>
}
else
{
    <div class="text-center">Brak niezrealizowanych zamówień</div>
}