@model Order

<p>Składanie zamówienia</p>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Checkout" method="post">
    <div class="form-group">
        <label>Imię:</label><input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Nazwisko:</label><input asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label>Adres:</label><input asp-for="Line1" class="form-control" />
        <label>Adres c.d.:</label><input asp-for="Line2" class="form-control" />
        <label>Adres c.d.:</label><input asp-for="Line3" class="form-control" />
    </div>
    <div class="form-group">
        <label>Miasto:</label><input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label>Kod pocztowy:</label><input asp-for="Zip" class="form-control" />
    </div>
    <div class="form-group">
        <label>Kraj:</label><input asp-for="Country" class="form-control" />
    </div>
    <div class="custom-checkbox">
        <label>
            <input asp-for="GiftWrap"/> Zapakować jako prezent
        </label>
    </div>
    <div class="text-center">
        <input class="btn btn-secondary" type="submit" value="Złóż zamówienie"/>
    </div>
</form>