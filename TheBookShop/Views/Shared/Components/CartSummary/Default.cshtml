@model Cart

<div class="">
    @if (Model.Lines.Count() > 0)
    {
        <small class="navbar-text">
            <b>Twój koszyk:</b>
            @Model.Lines.Sum(x => x.Quantity) produktów
            @Model.ComputeTotalValue().ToString("c")
        </small>
    }
    
    <a class="btn btn-sm btn-secondary navbar"
       asp-controller="Cart" asp-action="Index" asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
        <i class="fas fa-shopping-cart"></i>

    </a>
</div>