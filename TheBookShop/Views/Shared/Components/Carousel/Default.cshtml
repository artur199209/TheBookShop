@model CarouselViewModel
@{
    ViewData["Title"] = "Default";
}

<div class="container col-xl-auto" style="padding: 20px">
    <div class="card rcorners1 card-block card-outline-primary">
        <div class="row">
            <div class="col-xl-5"></div>
            <div class="col-xl-2 text-center">
                <h2>@Model.Category</h2>
            </div>
            <div class="col-xl-5">
                <div class="float-right">
                    <a class="btn btn-success " href=@String.Format("{0}-{1}", "#slider", @Model.Category) role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="btn btn-success" href=@String.Format("{0}-{1}", "#slider", @Model.Category) role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container col-xl-auto" style="padding: 20px">
        <div class="row justify-content-center">
            <div id=@String.Format("{0}-{1}", "slider", @Model.Category) class="carousel carousel-by-item slide" data-ride="carousel" data-interval="8000">
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active justify-content-center">
                        <div class="row">
                            @Html.Partial("ProductSummary", new Product())
                            @Html.Partial("ProductSummary", new Product())
                            @Html.Partial("ProductSummary", new Product())
                            @Html.Partial("ProductSummary", new Product())
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="row">
                            @Html.Partial("ProductSummary", new Product())
                            @Html.Partial("ProductSummary", new Product())
                            @Html.Partial("ProductSummary", new Product())
                            @Html.Partial("ProductSummary", new Product())
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="row">
                            @Html.Partial("ProductSummary", new Product())
                            @Html.Partial("ProductSummary", new Product())
                            @Html.Partial("ProductSummary", new Product())
                            @Html.Partial("ProductSummary", new Product())
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>