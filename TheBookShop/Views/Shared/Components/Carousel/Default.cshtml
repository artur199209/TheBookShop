@model CarouselComponentViewModel
@{
    ViewData["Title"] = "Default";
}

<div class="container" style="padding: 10px">
    <div class="card rcorners1 card-block card-outline-primary">
        <div class="row">
            <div class="col-xl-5"></div>
            <div class="col-xl-2 text-center">
                <h2>@Model.Category</h2>
            </div>
            <div class="col-xl-5">
                <div class="float-right">
                    <a class="btn btn-success" href=@($"#slider-{@Model.Category}") role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="btn btn-success" href=@($"#slider-{@Model.Category}") role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container col-xl-auto" style="padding: 5px">
        <div class="row justify-content-center">
            <div id=@($"slider-{@Model.Category}") class="carousel carousel-by-item slide col-xl-12 col-xl-auto" data-ride="carousel" data-interval="6000">
                <div class="carousel-inner col-xl-auto justify-content-center" role="listbox">
                    <div class="carousel-item active justify-content-center">
                        <div class="row">
                            @foreach (var item in @Model.Products.Take(4))
                            {
                                @Html.Partial("ProductSummary", item)
                            }
                        </div>
                    </div>
                    <div class="carousel-item justify-content-center">
                        <div class="row">
                            @Html.Partial("ProductSummary", new Product())
                            @Html.Partial("ProductSummary", new Product())
                            @Html.Partial("ProductSummary", new Product())
                            @Html.Partial("ProductSummary", new Product())
                        </div>
                    </div>
                    <div class="carousel-item justify-content-center">
                        <div class="row">
                            @Html.Partial("ProductSummary", new Product())
                            @Html.Partial("ProductSummary", new Product())
                            @Html.Partial("ProductSummary", new Product())
                            @Html.Partial("ProductSummary", new Product())
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>