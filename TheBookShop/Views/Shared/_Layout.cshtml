<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"
          asp-href-include="/lib/bootstrap/dist/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <link rel="stylesheet" asp-href-include="/lib/fontawesome/css/*.css" />
    <link rel="stylesheet" asp-href-include="css/*.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css"/>
    <script src="lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/jquery-validate/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js"></script>

    
    <title>The Book Shop</title>
    <style type="text/css">
        .rcorners1 {
            border-radius: 25px;
            border: 1px solid #73AD21;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse bg-inverse" role="navigation">
        <div class="row">
            <a class="col navbar-brand" href="#">Księgarnia</a>
            <div class="text-white">Zaloguj/Zarejestruj</div>
            <div class="col-1 text-right">
                @await Component.InvokeAsync("CartSummary")
            </div>
        </div>
    </div>
    <div>
        <nav class="navbar navbar-toggleable bg-faded navbar-inverse bg-inverse">
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav mr-auto">
                    @await Component.InvokeAsync("TopNavigation")
                </ul>
                <partial name="Search"/>
            </div>
          
        </nav>
    </div>
    <div class="container col-xl-auto">

        <div class="row p-5 justify-content-center">
            <div class="col-xl-auto">
                @RenderBody()
            </div>
        </div>

        @await Component.InvokeAsync("Carousel", new { category = "PROMOCJE" })
        @await Component.InvokeAsync("Carousel", new { category = "NOWOŚCI" })
        @await Component.InvokeAsync("Carousel", new { category = "BESTSELLERY" })
       
    </div>

<footer>
            <div class="container">
                <div class="row">
                    <div class="col-md-3 p-1">
                        <h5>INFORMACJE</h5>
                        <div style="color: grey">Historia zamówień</div>
                        <div style="color: grey">Koszty dostawy</div>
                        <div style="color: grey">Formy płatności</div>
                        <div style="color: grey">O Firmie</div>
                    </div>
                    <div class="col-md-3 p-1">
                        <h5>KONTAKT</h5>
                        <div><i class="fas fa-phone"></i> 0 123 456 123</div>
                        <br />
                        <div><i class="fas fa-envelope"></i> email@email.com</div>
                        <br />
                        <div><i class="fas fa-map-marker-alt"></i> s201 Fake St. 425 Lala Saint ada das d asd as</div>

                    </div>
                    <div class="col-md-3 p-1">
                        <h5>ŚLEDŹ NAS</h5>
                        <ul class="nav">
                            <li class="nav-item"><a href="http://www.facebook.com" class="nav-link pl-0"><i class="fa fa-facebook fa-lg"></i></a></li>
                            <li class="nav-item"><a href="http://twitter.com" class="nav-link"><i class="fa fa-twitter fa-lg"></i></a></li>
                            <li class="nav-item"><a href="http://github.com" class="nav-link"><i class="fa fa-github fa-lg"></i></a></li>
                            <li class="nav-item"><a href="http://instagram.com" class="nav-link"><i class="fa fa-instagram fa-lg"></i></a></li>
                        </ul>
                        <br />
                    </div>
                    <div class="col-md-3">
                        <partial name="Subscribe" />
                    </div>
                </div>
            </div>
    </footer>
</body>
</html>